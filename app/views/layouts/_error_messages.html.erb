<% if object.errors.any? %>
    <div class="">
        <div class="alert alert-danger">
          Ops! We found <%= pluralize(object.errors.count, 'error', 'errors')%>
            <ul>
                <% object.errors.full_messages.each do |msg|%>
                    <li> <%= msg %> </li>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>